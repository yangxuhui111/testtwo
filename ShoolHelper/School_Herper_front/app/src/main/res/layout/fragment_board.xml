<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage.fragment.BoardFragment"
    android:id="@+id/frame_board">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/SmartRlBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <ListView
            android:id="@+id/lv_boards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"></ListView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@drawable/shape_corner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <EditText
            android:id="@+id/find_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="内容搜索"
            android:text=""
            android:textSize="15sp"
            android:textColor="#AAAAAA"
            android:background="@null"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/find_it"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/findmessage"/>
    </LinearLayout>

    <!--
        开发人：尚一飞
        功能：悬浮按钮
    -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/jiahao"
        android:elevation="8dp"
        app:pressedTranslationZ="10dp"/>


</FrameLayout>