<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_yellow"
        android:padding="1dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/goback"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="修改密码"
            android:textSize="26dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_corner5">
            <ImageView
                android:id="@+id/imag1"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/clockphoto"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corner6"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/imag1">
                <EditText
                    android:id="@+id/et1"
                    android:hint="原密码"
                    android:text=""
                    android:textSize="24dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="15dp"
                    android:textColor="#AAAAAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_corner5">
            <ImageView
                android:id="@+id/imag2"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/clockphoto"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corner6"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/imag2">
                <EditText
                    android:id="@+id/et2"
                    android:hint="新密码"
                    android:text=""
                    android:textSize="24dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="15dp"
                    android:textColor="#AAAAAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_corner5">
            <ImageView
                android:id="@+id/imag3"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/clockphoto"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corner6"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/imag3">
                <EditText
                    android:hint="确认密码"
                    android:text=""
                    android:id="@+id/et3"
                    android:textSize="24dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="15dp"
                    android:textColor="#AAAAAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_corner7">
            <TextView
                android:id="@+id/tv1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="确认修改"
                android:textSize="26dp"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="140dp">
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>